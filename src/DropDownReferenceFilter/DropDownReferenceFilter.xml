<?xml version="1.0" encoding="utf-8"?>
<widget id="com.mendix.widget.custom.listviewcontrols.DropDownReferenceFilter" needsEntityContext="false" xmlns="http://www.mendix.com/widget/1.0/">
    <name>Drop down reference filter</name>
    <description>Filter Mendix list views using a drop-down</description>
    <icon></icon>
    <properties>
        <property key="entity" type="entity">
            <caption>List view with entity</caption>
            <category>General</category>
            <description>Select the same entity as the list view that this widget should interact with. If multiple list views with this entity are found, the closest is used</description>
        </property>
        <property key="filterEntityPath" type="entity" isPath="optional" pathType="reference" entityProperty="entity">
            <caption>Path</caption>
            <category>General</category>
            <description/>
        </property>
        <property key="attribute" type="attribute" entityProperty="filterEntityPath">
            <caption>Attribute</caption>
            <category>General</category>
            <description>The attribute shown in the drop down</description>
            <attributeTypes>
                <attributeType name="String"/>
                <attributeType name="Enum"/>
                <attributeType name="Boolean"/>
            </attributeTypes>
        </property>
        <property key="constraint" type="entityConstraint" entityProperty="filterEntityPath" required="false">
            <caption>XPath constraint</caption>
            <category>General</category>
            <description/>
        </property>
        <property key="sortAttributes" type="object" isList="true" required="false">
            <caption>Sort order</caption>
            <category>General</category>
            <description/>
            <properties>
                <property key="attribute" type="attribute" entityProperty="../filterEntityPath">
                    <caption>Attribute</caption>
                    <category>Attribute</category>
                    <description/>
                    <attributeTypes>
                        <attributeType name="AutoNumber"/>
                        <attributeType name="Enum"/>
                        <attributeType name="Boolean"/>
                        <attributeType name="Decimal"/>
                        <attributeType name="Integer"/>
                        <attributeType name="Long"/>
                        <attributeType name="String"/>
                        <attributeType name="DateTime"/>
                    </attributeTypes>
                </property>
                <property key="sortOrder" type="enumeration" defaultValue="asc">
                    <caption>Sort direction</caption>
                    <category>Attribute</category>
                    <description/>
                    <enumerationValues>
                        <enumerationValue key="asc">Ascending</enumerationValue>
                        <enumerationValue key="desc">Descending</enumerationValue>
                    </enumerationValues>
                </property>
            </properties>
        </property>
        <property key="defaultValue" type="string" required="false">
            <caption>Default value</caption>
            <category>General</category>
            <description/>
        </property>
    </properties>
</widget>
